#!/bin/sh
##
 # Batocera.PLUS
 # Ativa e desativa o ponteiro do mouse
 # Autor: Alexandre Freire dos Santos
 # Email: alexxandre.freire@gmail.com
 ##

################################################################################

##
 # Exibe o ponteiro do mouse.
 ##
function mouseOn() {
    if ! [ -f '/tmp/mouse_pointer_keys' ]; then
        if ! [ "$(pidof unclutter)" ]; then
            unclutter --timeout 1 -b &
        fi
    fi
    touch '/tmp/mouse_pointer_keys'
}

################################################################################

##
 # Oculta o ponteiro do mouse
 ##
function mouseOff() {
    if [ -f '/tmp/mouse_pointer_keys' ]; then
        if [ "$(pidof unclutter)" ]; then
            killall unclutter &
        fi
    fi
    rm '/tmp/mouse_pointer_keys'
}

################################################################################

##
 # Exibe ou oculta o ponteiro do mouse.
 # Se o ponteiro estiver mostrando oculta, se estiver oculto exibe.
 ##
function mouseOnOff() {
    if [ -f '/tmp/mouse_pointer_keys' ]; then
        mouseOff
    else
        mouseOn
    fi
}

################################################################################

case $1 in
    on)
        mouseOn
        ;;
    off)
        mouseOff
        ;;
    invert)
        mouseOnOff
        ;;
    *)
        echo 'mouse-mointer on     [ enable mouse pointer ]'
        echo 'mouse-mointer off    [ disable mouse pointer ]'
        echo 'mouse-mointer invert [ invert mouse pointer state ]'
        ;;
esac

exit 0

################################################################################
