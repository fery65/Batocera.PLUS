<theme>
    <formatVersion>4</formatVersion>
<!-- Helpsystem menu all views //-->

	<view name="system, basic, detailed, video">
	              <helpsystem name="help">
			<textColor>000000</textColor>
			<fontPath>./art/comic.otf</fontPath>
			<fontSize>0.03</fontSize>
			<pos>0.020 0.940</pos>
			<iconColor>000000</iconColor>
		</helpsystem>	
       </view>

<view name="system">
	<sound name="directory">
	<path>./music/</path>
	</sound>
	</view>
	
<!-- End Helpsystem menu all views //-->
<!-- Carousel Feature //-->		
	<feature supported="carousel">

		<view name="system">

			<carousel name="systemcarousel">
				<type>horizontal</type>
				<color>eeeeeecc</color>
				<logoScale>1.5</logoScale>
				<maxLogoCount>3</maxLogoCount>
			</carousel>
		
			<text name="systemInfo">
				<backgroundColor>eeeeeecc</backgroundColor>
				<color>000000</color>
				<fontPath>./art/Shaka_Pow.ttf</fontPath>
				<fontSize>0.035</fontSize>
			</text>
		
		</view>

	
	</feature>
<!-- End Carousel Feature //-->	
<!-- Background & Gamelist All Views //-->		
	<view name="basic, detailed, video">
	
		<image name="background">
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./art/menu.jpg</path>
		</image>
		
		<textlist name="gamelist">
			<selectorColor>eac42830</selectorColor>
	                <selectedColor>f79420</selectedColor>
	               <primaryColor>EEEEEE</primaryColor>
	                <secondaryColor>eac428</secondaryColor>
			<fontPath>./art/comic.otf</fontPath>
			<forceUppercase>0</forceUppercase>
			<pos>0.04 0.23</pos>
	                <size>0.415 0.58</size>
			<alignment>left</alignment>
			<horizontalMargin>0.008</horizontalMargin>
			<fontSize>0.022</fontSize>
			<scrollSound>./art/scroll.wav</scrollSound>
		</textlist>
		
	</view>
<!-- End Background & Gamelist All Views //-->
<!-- View Specific Image Placement //-->
	<view name="basic">
	</view>

	<view name="detailed">

		<image name="md_image">
	<origin>.5 .5</origin>
	<pos>0.8392 0.4245</pos>
	<maxSize>0.258 0.403</maxSize>
</image>
		
	</view>
	
	<feature supported="video">
	
		<view name="video">
	
			<video name="md_video">
				<pos>0.672 0.4</pos>
				<origin>0.5 0.5</origin>
				<maxSize>0.32 0.42</maxSize>
				<delay></delay>
				<default></default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>
		
			<image name="md_marquee">
				<pos>1 1</pos>
				<maxSize>0 0</maxSize>
				<origin>0 0</origin>
			</image>
			
			<image name="md_image">
				<pos>0.918 0.525</pos>
				<maxSize>0.127 0.17</maxSize>
				<origin>0.5 0.5</origin>
			</image>
		
		</view>
		
	</feature>
<!-- End View Specific Image Placement //-->
